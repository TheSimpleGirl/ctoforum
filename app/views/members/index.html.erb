<h1>Listing members</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Company</th>
    <th>Title</th>
    <th>Bio</th>
    <th>Email</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @members.each do |member| %>
  <tr>
    <td><%= member.name %></td>
    <td><%= member.company %></td>
    <td><%= member.title %></td>
    <td><%= member.bio %></td>
    <td><%= member.email %></td>
    <td><%= link_to 'Show', member %></td>
    <td><%= link_to 'Edit', edit_member_path(member) %></td>
    <td><%= link_to 'Destroy', member, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

